<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/agent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="new appointment"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <EditText
            android:id="@+id/agent_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="The appointment is with ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/agent_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_category"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Number"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/dependency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Dependency Name ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/dependency_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dependency_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Dependency Name ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/AppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dependency_category"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Date"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <ImageButton
            android:id="@+id/AppointmentDateButton"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_below="@+id/dependency_category"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"

            app:srcCompat="@drawable/baseline_edit_calendar_24" />

        <TextView
            android:id="@+id/AppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AppointmentDate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Time"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <ImageButton
            android:id="@+id/AppointmentTimeButton"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_below="@+id/AppointmentDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"

            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/ReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AppointmentTime"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Reminder Time"
            android:minHeight="48dp"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             />

        <ImageButton
            android:id="@+id/ReminderTimeButton"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_below="@+id/AppointmentTime"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="50dp"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <Switch
            android:id="@+id/reminderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="126dp"
            android:text="Reminder" />


        <!--<Button
            android:id="@+id/AppointmentReminderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_switch"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:text="Change Time"
            android:textAllCaps="false"/>-->

    </RelativeLayout>

    <Button
        android:id="@+id/newAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:cornerRadius = "40dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="20sp" />




</RelativeLayout>
