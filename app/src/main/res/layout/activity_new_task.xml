<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/agent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="new appointment"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <EditText
            android:id="@+id/agent_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="The appointment is with ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/agent_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_category"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Number"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/dependency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Dependency Name ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/dependency_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dependency_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Dependency Name ..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <EditText
            android:id="@+id/AppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dependency_category"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <ImageButton
            android:id="@+id/AppointmentDateButton"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_below="@+id/dependency_category"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/baseline_edit_calendar_24" />

        <EditText
            android:id="@+id/AppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AppointmentDate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Time"
            android:inputType="time"
            android:minHeight="48dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <ImageButton
            android:id="@+id/AppointmentTimeButton"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_below="@+id/AppointmentDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="51dp"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <Switch
            android:id="@+id/reminder_switch"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_below="@+id/AppointmentTime"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="261dp"
            android:onClick="onSwitchClick"
            android:text="Reminder" />

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_switch"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-38dp"
            android:layout_marginRight="40dp"
            android:hint="Reminder is not set" />

        <!--<Button
            android:id="@+id/AppointmentReminderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_switch"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:text="Change Time"
            android:textAllCaps="false"/>-->

    </RelativeLayout>

    <Button
        android:id="@+id/newAppointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/layout"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="-63dp"
        android:layout_toStartOf="@+id/newAppointmentButton"
        android:text="Cancel"
        android:background="#D10127" />


</RelativeLayout>
